@model IEnumerable<NETCOperations.Models.OpsViewModels.HurricaneServerModel>

@{
    ViewData["Title"] = "Index";
}

<h2 class="text-capitalize">Hurricane List</h2>
<hr />
<form asp-controller="HurricaneServerModels" asp-action="Index" class="form-inline">
    <input class="form-control" type="text" placeholder="Hostname" name="searchString" />
    <input type="submit" class="btn btn-warning" value="Search" />
</form>
<br />

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-hover">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HostName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Application)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Enviroment)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Hurricane)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Primary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rack)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Room)
        </th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HostName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Application)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Enviroment)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Hurricane)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Primary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rack)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Room)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id" class="btn-sm btn-primary">Edit</a>
            <a asp-action="Details" asp-route-id="@item.Id" class="btn-sm btn-info">Details</a>
            <a asp-action="Delete" asp-route-id="@item.Id" class="btn-sm btn-danger">Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>
