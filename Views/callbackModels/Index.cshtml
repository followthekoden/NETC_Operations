@model IEnumerable<NETCOperations.Models.OpsViewModels.callbackModel>

@{
    ViewData["Title"] = "Index";
}

<h2 class="text-capitalize">callback registry</h2>
<hr/>
<form asp-controller="callbackModels" asp-action="Index" class="form-inline">
    <input class="form-control" type="text" placeholder="John Smith" name="searchString"/>
    <input type="submit" class="btn btn-warning" value="Search"/>
</form>
<br/>
<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<br/>
<table class="table table-hover">
    <thead>
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Group)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Primary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Secondary)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Group)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Primary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Secondary)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id" class="btn-sm btn-primary">Edit</a>
            <a asp-action="Details" asp-route-id="@item.Id" class="btn-sm btn-info">Details</a>
            <a asp-action="Delete" asp-route-id="@item.Id" class="btn-sm btn-danger">Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>
